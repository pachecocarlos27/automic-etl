modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["streamlit_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "cargo", "libiconv", "libxcrypt", "libyaml", "pkg-config", "poppler_utils", "rdkafka", "rustc", "tesseract"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit UI"

[[workflows.workflow]]
name = "Streamlit UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run src/automic_etl/ui/app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34887
externalPort = 3000

[[ports]]
localPort = 45955
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "src/automic_etl/ui/app.py", "--server.port=5000", "--server.address=0.0.0.0", "--server.headless=true"]
