# Automic ETL - Production Environment Variables Template
# Copy to .env and fill in values for deployment

# =============================================================================
# Core Configuration
# =============================================================================
AUTOMIC_LAKEHOUSE_NAME=production_lakehouse
AUTOMIC_STORAGE_PROVIDER=aws  # aws, gcp, azure
AUTOMIC_LOG_LEVEL=INFO
AUTOMIC_CATALOG_TYPE=glue  # glue, rest, hive, sql

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_LAKEHOUSE_BUCKET=my-lakehouse-bucket
AWS_REGION=us-east-1
AWS_ROLE_ARN=arn:aws:iam::123456789:role/automic-etl-role
# AWS_ACCESS_KEY_ID=  # Use IAM roles instead in production
# AWS_SECRET_ACCESS_KEY=

# =============================================================================
# GCP Configuration (if using GCP)
# =============================================================================
# GCP_LAKEHOUSE_BUCKET=my-gcp-bucket
# GCP_PROJECT_ID=my-project
# GOOGLE_APPLICATION_CREDENTIALS=  # Use workload identity

# =============================================================================
# Azure Configuration (if using Azure)
# =============================================================================
# AZURE_LAKEHOUSE_CONTAINER=my-container
# AZURE_STORAGE_ACCOUNT=mystorageaccount
# Use managed identity - no connection string needed

# =============================================================================
# LLM Configuration
# =============================================================================
AUTOMIC_LLM_PROVIDER=anthropic
AUTOMIC_LLM_MODEL=claude-sonnet-4-20250514
ANTHROPIC_API_KEY=sk-ant-xxxx

# Alternative: OpenAI
# AUTOMIC_LLM_PROVIDER=openai
# AUTOMIC_LLM_MODEL=gpt-4-turbo
# OPENAI_API_KEY=sk-xxxx

# =============================================================================
# Apache Airflow Configuration
# =============================================================================
AIRFLOW_BASE_URL=http://airflow-webserver:8080
AIRFLOW_USERNAME=your-airflow-username
AIRFLOW_PASSWORD=your-secure-airflow-password
AIRFLOW_DAGS_FOLDER=/opt/airflow/dags

# =============================================================================
# Security Configuration
# =============================================================================
AUTOMIC_AUTH_PROVIDER=jwt
AUTOMIC_JWT_SECRET=your-secure-random-secret-key-min-32-chars
AUTOMIC_ALLOWED_ORIGINS=https://app.example.com
AUTOMIC_KMS_KEY_ID=alias/automic-etl-key

# =============================================================================
# Multi-tenant Configuration
# =============================================================================
AUTOMIC_MULTI_TENANT=false

# =============================================================================
# Notifications Configuration
# =============================================================================
# Email
AUTOMIC_EMAIL_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=smtp-password
AUTOMIC_EMAIL_FROM=noreply@automic-etl.io

# Slack
AUTOMIC_SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#data-alerts

# PagerDuty
AUTOMIC_PAGERDUTY_ENABLED=false
PAGERDUTY_ROUTING_KEY=your-routing-key

# =============================================================================
# Observability Configuration
# =============================================================================
AUTOMIC_TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

AUTOMIC_METRICS_PROVIDER=prometheus

AUTOMIC_PROFILING_ENABLED=false

# =============================================================================
# CDC Configuration
# =============================================================================
AUTOMIC_CDC_ENABLED=false
