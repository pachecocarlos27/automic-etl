# Automic ETL - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================
# Anthropic (recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (alternative)
OPENAI_API_KEY=your_openai_api_key

# Azure OpenAI (alternative)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_LAKEHOUSE_BUCKET=your-lakehouse-bucket

# Optional: For LocalStack/MinIO development
# AWS_ENDPOINT_URL=http://localhost:4566

# =============================================================================
# Google Cloud Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project
GCP_LAKEHOUSE_BUCKET=your-lakehouse-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_LAKEHOUSE_CONTAINER=your-lakehouse-container

# =============================================================================
# Database Connections
# =============================================================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=your_database

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=your_database

# Snowflake
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema

# BigQuery
BIGQUERY_PROJECT=your-project
BIGQUERY_DATASET=your_dataset

# =============================================================================
# Streaming
# =============================================================================
# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# AWS Kinesis
KINESIS_STREAM_NAME=your-stream

# =============================================================================
# API Connectors
# =============================================================================
# Salesforce
SALESFORCE_USERNAME=your_username
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_token

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Development
# =============================================================================
# Set to "development" for local dev features
ENVIRONMENT=production
